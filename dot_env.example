# LAMBDA_SLACK_CHANNEL_AUTO_REPLY=true
# LAMBDA_SLACK_CHANNEL_AUTO_REPLY_ALLOWLIST=C01234567,C08999999
# LAMBDA_SLACK_CHANNEL_AUTO_REPLY_KEYWORDS=bigquery,bq,sql,쿼리,빅쿼리,테이블,스키마,데이터
